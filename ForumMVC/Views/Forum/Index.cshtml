@model List<ForumMVC.Models.ThreadViewModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Forum";
    
}

<h1>Forum</h1>
<div><a href="/Forum/Create">Create Thread</a></div>
<section id="threadSection">
    @foreach (var thread in Model)
    {
        <div class="ThreadDiv">
            <a href="/Forum/Thread?id=@thread.Id">
                <div class="threadBody"> 
                    <h2>#@thread.Id</h2>
                    <p>@thread.Body</p>
                </div>
            </a>
            <div class="likesDiv">
                <a href="/Forum/Thread?id=@thread.Id">
                    <i>Votes: @thread.Likes, 30 comments</i>
                </a>
                <div class="arrowsDiv">
                    <form asp-controller="Forum" asp-action="PatchLikesThread" asp-route-Id=@thread.Id method="post">
                        <button name="like" value=1 type="submit"><i class="fa-solid fa-angle-up"></i></button>
                        <button name="like" value=0 type="submit"><i class="fa-solid fa-angle-down"></i></button>
                    </form>
                </div>
            </div>
        </div>
    }
</section>
